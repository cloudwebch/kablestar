{
  "name": "kablestar-main",
  "version": "1.0.0",
  "author": "Valentin Zmaranda <valentin.zmaranda@gmail.com>",
  "description": "KableStar theme",
  "scripts": {
    "lint:scss": "stylelint 'assets/styles/src/**/*.scss' --syntax scss",
    "lint:scss:fix": "stylelint 'assets/styles/src/**/*.scss' --syntax scss --fix",
    "lint:js": "eslint assets/scripts/src",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint": "npm run lint:js && npm run lint:scss",
    "build": "npm run lint && webpack --config ./webpack/production.js",
    "watch": "webpack --watch --config ./webpack/development.js",
    "wp-pot": "wp-pot --src 'lib/**/*.php' --dest-file 'languages/kablestar.pot' --package 'kablestar' --domain 'kablestar' --last-translator 'Valentin Zmaranda <valentin.zmaranda@cloudweb.ch>' --team 'Team <info@cloudweb.ch' --bug-report 'https://www.cloudweb.ch' --write-file"
  },
  "lint-staged": {
    "assets/scripts/src/**/*.{js,jsx}": [
      "eslint . --fix",
      "git add"
    ],
    "assets/styles/src/**/*.scss": [
      "stylelint --syntax scss --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "prettier": "@wordpress/prettier-config",
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@wordpress/babel-preset-default": "^3.0.0",
    "@wordpress/browserslist-config": "^2.3.0",
    "@wordpress/eslint-plugin": "^2.4.0",
    "@wordpress/prettier-config": "^0.3.0",
    "autoprefixer": "^9.1.5",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "clean-webpack-plugin": "^0.1.19",
    "compression-webpack-plugin": "^4.0.0",
    "css-loader": "^1.0.0",
    "css-mqpacker": "^7.0.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-wordpress": "^2.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "file-loader": "^2.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "pixrem": "^5.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-mixins": "^6.2.1",
    "postcss-nested": "^4.1.2",
    "postcss-simple-vars": "^5.0.2",
    "prettier": "^1.19.1",
    "prettier-eslint": "^11.0.0",
    "prettier-webpack-plugin": "^1.2.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^5.1.0",
    "stylelint-config-wordpress": "^14.0.0",
    "stylelint-scss": "^3.6.1",
    "stylelint-webpack-plugin": "^2.1.0",
    "terser-webpack-plugin": "^1.2.3",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.1",
    "wp-pot": "^1.9.3",
    "wp-pot-cli": "^1.5.0"
  },
  "repository": "https://github.com/cloudwebch/kablestar",
  "license": "MIT"
}
